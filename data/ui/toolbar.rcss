ul#top-toolbar {
    width: 800px;
    background-color: #000000;
    display: block;
}

ul#top-toolbar li {
    position: relative;
}

ul#top-toolbar li ul {
    position: absolute;
    background-color: #000000;
    width: 100px;
}

ul#top-toolbar li.active ul li {
    display: block;
    
}

ul#top-toolbar li.active ul li:hover {
    color: #00ff00;
}

ul#top-toolbar li ul {
    display: none;
}

ul#top-toolbar li.active ul {
    display: block;
}